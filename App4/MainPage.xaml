<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="App4 Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Xamarin Forms MVVM + Commands " FontSize="Title" Padding="30,10,30,10" HorizontalTextAlignment="Center"/>
        <Label Text="Alumno: Victor David Bárcenas Gómez" FontSize="16" Padding="30,0,30,0"/>
        <Label Text="Grupo: IDGS01" FontSize="16" Padding="30,0,30,0"/>
        <Label Text=""/>
        <Label HorizontalTextAlignment="Center"
            Text="{Binding CountConverted}"/>
        <Label Text=""/>
        <Button Text="Haz click" AnchorX="45" AnchorY="15" HorizontalOptions="Center" BackgroundColor="LawnGreen"
                Command="{Binding ButtonClickCommand}"/>
        <Label Text=""/>
        <Label Text=""/>
        <Button Text="Reiniciar" AnchorX="45" AnchorY="15" HorizontalOptions="Center" BackgroundColor="Coral"
                Command="{Binding ResetClickCommand}"/>

    </StackLayout>

</ContentPage>
